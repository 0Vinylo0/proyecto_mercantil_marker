ExecStart=/usr/local/bin/conversor.sh

[Unit]
Description=Monitoreo de la carpeta input en Drive
After=network.target

[Service]
Type=simple
ExecStart=/bin/bash -c 'source /root/env/bin/activate && exec /usr/local/bin/conversor.sh'
Restart=always
User=root
WorkingDirectory=/root
Environment="VIRTUAL_ENV=/root/venv_drive"
Environment="PATH=/root/env/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

[Install]
WantedBy=multi-user.target
